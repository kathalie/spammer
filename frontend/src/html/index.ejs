<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spam Manager</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-5">
    <h1>Spam Recipients Management</h1>
    <div class="row mt-4">
        <!-- Recipients Column -->
        <div class="col-md-6">
            <div class="text-center">
                <button type="button" class="btn btn-success" id="create-recipient-button"
                        data-toggle="modal"
                        data-target="#recipient-data-modal" >
                    Create new recipient
                </button>
            </div>

            <div><br></div>

            <h3>All recipients</h3>
            <%- include('partials/recipients-table', {recipients}); %>

            <!-- Pagination -->
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item" id="previous-page-button">
                        <span class="page-link">&laquo;</span>
                    </li>

                    <li class="page-item active" aria-current="page">
                        <span class="page-link">1 <span class="sr-only">(current)</span></span>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>

                    <li class="page-item" id="next-page-button">
                        <a class="page-link" href="#">&raquo;</a>
                    </li>
                </ul>
            </nav>
        </div>

        <!-- Messages Column -->
        <div class="col-md-6">
            <div class="text-center">
                <button type="button" class="btn btn-primary" id="choose-template-button"
                        data-toggle="modal"
                        data-target="#templates-modal" >
                    Choose email template
                </button>
            </div>
            <div class="mt-4">
                <h3>Subject</h3>
                <textarea class="form-control" id="subject-field"></textarea>
            </div>
            <div class="mt-4">
                <h3>Message</h3>
                <textarea class="form-control" id="message-field"></textarea>
                <button type="button" class="btn btn-success mt-2" id="save-message-template-button">Save as template</button>
            </div>
            <div class="mt-4">
                <h3>Send Email</h3>
                <button type="button" class="btn btn-primary" id="spam-button">Send Email</button>
            </div>
        </div>
    </div>

    <!-- Modals -->
    <%- include('partials/recipient-data-modal'); %>
    <%- include('partials/templates-modal'); %>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/ejs@3.1.9/ejs.min.js"></script>

<script type="module" src="../js/main.js"></script>
</body>
</html>
