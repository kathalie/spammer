<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spam Manager</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <script defer src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.3/dist/umd/popper.min.js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/ejs@3.1.9/ejs.min.js"></script>
    <script defer type="module" src="../js/main.js"></script>
</head>
<body>
<div class="container mt-5">
    <h1>Spam Recipients Management</h1>
    <div class="row mt-4">
        <!-- Recipients Column -->
        <div class="col-md-6">
            <div class="text-center">
                <button type="button" class="btn btn-success" id="create-recipient-button"
                        data-bs-toggle="modal"
                        data-bs-target="#recipient-data-modal" >
                    Create new recipient
                </button>
            </div>

            <div><br></div>

            <h3>Recipients</h3>
            <%- include('partials/recipients-table', {recipients}); %>

            <!-- Pagination -->
            <%- include('partials/recipients-pagination'); %>
        </div>

        <!-- Messages Column -->
        <div class="col-md-6">
            <div class="text-center">
                <button type="button" class="btn btn-primary" id="choose-template-button"
                        data-bs-toggle="modal"
                        data-bs-target="#templates-modal" >
                    Choose email template
                </button>
            </div>
            <div class="mt-4">
                <h3>Subject</h3>
                <textarea class="form-control" id="subject-field"></textarea>
            </div>
            <div class="mt-4">
                <h3>Message</h3>
                <textarea class="form-control" id="message-field"></textarea>
                <button type="button" class="btn btn-success mt-2" id="save-message-template-button">Save as template</button>
            </div>
            <div class="mt-4">
                <h3>Send Email</h3>
                <button type="button" class="btn btn-primary" id="spam-button">Send Email</button>
            </div>
        </div>
    </div>

    <!-- Modals -->
    <%- include('partials/recipient-data-modal'); %>
    <%- include('partials/templates-modal'); %>
</div>

</body>
</html>
