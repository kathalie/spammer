<div class="modal fade" id="recipient-data-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Recipient Data</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form fields -->
                <form>
                    <div class="form-group">
                        <label for="update-email-field">Email:</label>
                        <input type="email" class="form-control" id="update-email-field" placeholder="Enter email"
                                required pattern="^[\w-\.]+@([\w-]+\.)+[\w-]{2,4}$">
                    </div>
                    <div class="form-group">
                        <label for="update-first-name-field">First Name:</label>
                        <input type="text" class="form-control" id="update-first-name-field" placeholder="Enter first name">
                    </div>
                    <div class="form-group">
                        <label for="update-middle-name-field">Middle Name:</label>
                        <input type="text" class="form-control" id="update-middle-name-field" placeholder="Enter middle name">
                    </div>
                    <div class="form-group">
                        <label for="update-last-name-field">Last Name:</label>
                        <input type="text" class="form-control" id="update-last-name-field" placeholder="Enter last name">
                    </div>

                    <!-- Save button -->
                    <button type="button" class="btn btn-primary" data-dismiss="modal" id="save-recipient-button">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>